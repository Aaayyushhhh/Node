<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-gray-50 to-gray-100 min-h-screen">
  <%- include('../partials/nav') %>

  <main class="flex items-center justify-center min-h-[85vh] px-4 py-6">
    <div class="w-full max-w-4xl bg-white rounded-3xl shadow-xl p-6 sm:p-8 border border-gray-100">

      <!-- Heading -->
      <div class="text-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900 tracking-tight mb-1">
          Create Account
        </h1>
        <p class="text-gray-500 text-sm">
          Sign up to continue to Airbnb
        </p>
      </div>

      <!-- Signup Form -->
      <form action="/signup" method="POST" class="space-y-4">
        <% if(typeof errors !== undefined && errors && errors.length > 0 ) { %>
          <div class="bg-red-50 border-l-4 border-red-500 text-red-700 px-4 py-2.5 rounded-lg shadow-sm" role="alert">
            <div class="flex items-start">
              <i class="fas fa-exclamation-circle text-red-500 mt-0.5 mr-3"></i>
              <div>
                <strong class="font-bold block mb-1">Error!</strong>
                <ul class="list-disc list-inside space-y-1 text-sm">
                  <% errors.forEach(error =>{%>
                    <li><%= error%></li>
                  <% }) %>
                </ul>
              </div>
            </div>
          </div>
        <% } %>

        <!-- Two Column Layout for Names -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- First Name -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1.5">
              First Name
            </label>
            <input
              type="text"  
              name="firstName"
              placeholder="Enter your first name"
              value="<%= oldInput.firstName ? oldInput.firstName :''%>"
              required
              class="w-full px-4 py-2.5 border border-gray-300 rounded-xl
                     focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent
                     transition duration-200 hover:border-gray-400"
            />
          </div>

          <!-- Last Name -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-1.5">
              Last Name
            </label>
            <input
              type="text"
              name="lastName"
              placeholder="Enter your last name"
              value="<%= oldInput.lastName ? oldInput.lastName:''%>"
              required
              class="w-full px-4 py-2.5 border border-gray-300 rounded-xl
                     focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent
                     transition duration-200 hover:border-gray-400"
            />
          </div>
        </div>

        <!-- Email field -->
        <div>
          <label for="email" class="block text-sm font-semibold text-gray-700 mb-1.5">Email Address</label>
          <div class="relative">
            <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-gray-400">
              <i class="fas fa-envelope"></i>
            </span>
            <input
              type="email"
              id="email"
              name="email"
              value="<%= oldInput.email ? oldInput.email : '' %>"
              placeholder="your.email@example.com"
              class="w-full pl-11 pr-4 py-2.5 border border-gray-300 rounded-xl
                     focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent
                     transition duration-200 hover:border-gray-400"
              required />
          </div>
        </div>

        <!-- Two Column Layout for Password and User Type -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Password fields column -->
          <div class="space-y-4">
            <div>
              <label for="password" class="block text-sm font-semibold text-gray-700 mb-1.5">Password</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-gray-400">
                  <i class="fas fa-lock"></i>
                </span>
                <input
                  type="password"
                  id="password"
                  name="password"
                  placeholder="Enter Your Password"
                  class="w-full pl-11 pr-4 py-2.5 border border-gray-300 rounded-xl
                         focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent
                         transition duration-200 hover:border-gray-400"
                  required/>
              </div>
            </div>
            
            <div>
              <label for="confirmPassword" class="block text-sm font-semibold text-gray-700 mb-1.5">Confirm Password</label>
              <div class="relative">
                <span class="absolute inset-y-0 left-0 flex items-center pl-4 text-gray-400">
                  <i class="fas fa-lock"></i>
                </span>
                <input
                  type="password"
                  id="confirmPassword"
                  name="confirmPassword"
                  placeholder="Confirm Your Password"
                  class="w-full pl-11 pr-4 py-2.5 border border-gray-300 rounded-xl
                         focus:outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent
                         transition duration-200 hover:border-gray-400"
                  required/>
              </div>
            </div>
          </div>

          <!-- User type selection -->
          <div class="flex flex-col justify-between">
            <div class="p-4 bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl border border-gray-200 shadow-sm h-full flex flex-col justify-center">
              <p class="text-sm font-semibold text-gray-700 mb-3">I want to register as:</p>
              <div class="flex flex-col space-y-3">
                <label class="inline-flex items-center cursor-pointer group">
                  <input type="radio" name="userType" value="guest" id="guest" class="form-radio text-red-500 focus:ring-red-400 w-4 h-4" checked="<% oldInput.userType === "guest"%>" />
                  <span class="ml-2 text-gray-700 group-hover:text-gray-900 transition font-medium">Guest</span>
                </label>
                <label class="inline-flex items-center cursor-pointer group">
                  <input type="radio" name="userType" value="host" id="host" class="form-radio text-red-500 focus:ring-red-400 w-4 h-4" checked="<% oldInput.userType === "host"%>"/>
                  <span class="ml-2 text-gray-700 group-hover:text-gray-900 transition font-medium">Host</span>
                </label>
              </div>
            </div>
          </div>
        </div>

        <!-- Terms and Submit Row -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 items-center pt-2">
          <!-- Terms and conditions -->
          <div>
            <label class="inline-flex items-start cursor-pointer group">
              <input type="checkbox" name="terms" id="terms" class="form-checkbox text-red-500 focus:ring-red-400 mt-0.5 w-4 h-4 rounded" required />
              <span class="ml-3 text-sm text-gray-600 group-hover:text-gray-800 transition">
                I agree to the <a href="#" class="text-red-500 hover:text-red-600 font-semibold hover:underline transition">terms and conditions</a>
              </span>
            </label>
          </div>

          <!-- Submit -->
          <input
            type="submit"
            value="Sign Up"
            class="w-full py-3 bg-gradient-to-r from-red-500 to-pink-500 text-white rounded-xl
                   font-bold tracking-wide
                   hover:from-red-600 hover:to-pink-600 hover:shadow-xl hover:scale-[1.02]
                   active:scale-[0.98]
                   transition-all duration-300 cursor-pointer shadow-md"
          />
        </div>

      </form>

      <!-- Extra Links -->
      <div class="text-center mt-6 pt-4 border-t border-gray-200">
        <p class="text-sm text-gray-600">
          Already have an account?
          <a href="/login"
             class="text-red-500 hover:text-red-600 font-semibold transition ml-1">
            Sign In
          </a>
        </p>
      </div>

    </div>
  </main>
</body>
</html>