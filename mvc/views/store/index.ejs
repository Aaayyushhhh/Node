<%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>
    <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-7xl">
      <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
        Welcome to Airbnb index page
      </h2>
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center w-full">
  <% registeredHomes.forEach((home, index) => { %>
   <li class="list-none">
  <!-- Full Card with fixed width & height -->
  <div class="bg-white rounded-3xl shadow-xl transform transition duration-500 hover:scale-105 hover:shadow-2xl flex flex-col overflow-hidden w-80 h-[500px]">
    
    <!-- Image -->
    <div class="h-60 w-full overflow-hidden rounded-t-3xl">
      <img 
        src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=80" 
        alt="<%= home.houseName %>" 
        class="w-full h-full object-cover transition-transform duration-500 hover:scale-110">
    </div>

    <!-- Details -->
    <div class="flex-1 p-6 space-y-3">
      <h2 class="text-2xl font-bold text-gray-800"><%= home.houseName %></h2>
      <p class="text-gray-600"><strong>Price:</strong> ₹<%= home.Price %></p>
      <p class="text-gray-600"><strong>Location:</strong> <%= home.Location %></p>
      <p class="text-yellow-500 font-semibold">⭐ <%= home.Rating %></p>
    </div>

    <!-- Button -->
    <div class="p-6 pt-0">
      <button class="w-full bg-blue-600 text-white py-2 rounded-xl hover:bg-blue-700 transition duration-300">
        Book Now
      </button>
    </div>

  </div>
</li>

  <% }) %>
</ul>

    </main>
  </body>
</html>
